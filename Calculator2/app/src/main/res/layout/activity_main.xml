<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C37D7D"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_res"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_gravity="right"
        android:layout_marginTop="350px"
        android:layout_marginBottom="150px"
        android:gravity="right"

        android:textSize="40sp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:backgroundTint="#E69696"
            android:text="7"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/btn_8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:backgroundTint="#E69696"
            android:text="8"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/btn_9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:backgroundTint="#E69696"
            android:text="9"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/btn_AD"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:backgroundTint="#3F51B5"
            android:text="+/-"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/btn_right"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:backgroundTint="#3F51B5"
            android:text="->"
            android:textSize="30sp"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:backgroundTint="#E69696"
            android:text="4"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/btn_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:backgroundTint="#E69696"
            android:text="5"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/btn_6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:backgroundTint="#E69696"
            android:text="6"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/btn_Nhan"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:backgroundTint="#3F51B5"
            android:text="*"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/btn_Chia"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:backgroundTint="#3F51B5"
            android:text="/"
            android:textSize="30sp"></Button>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ln_1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:backgroundTint="#E69696"
                android:text="1"
                android:textSize="30sp"></Button>

            <Button
                android:id="@+id/btn_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:backgroundTint="#E69696"
                android:text="2"
                android:textSize="30sp"></Button>

            <Button
                android:id="@+id/btn_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:backgroundTint="#E69696"
                android:text="3"
                android:textSize="30sp"></Button>

            <Button
                android:id="@+id/btn_Tru"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:backgroundTint="#3F51B5"
                android:text="-"
                android:textSize="30sp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@+id/ln_1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_C"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:backgroundTint="#B64646"
                android:text="C"
                android:textSize="30sp"></Button>

            <Button
                android:id="@+id/btn_0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:backgroundTint="#E69696"
                android:text="0"
                android:textSize="30sp"></Button>

            <Button
                android:id="@+id/btn_Cham"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:backgroundTint="#3F51B5"
                android:text="."
                android:textSize="30sp"></Button>

            <Button
                android:id="@+id/btn_Cong"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:backgroundTint="#3F51B5"
                android:text="+"
                android:textSize="30sp"></Button>
        </LinearLayout>

        <Button
            android:id="@+id/btn_Bang"
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@+id/ln_1"
            android:backgroundTint="#3F51B5"
            android:text="="
            android:textSize="30sp"></Button>
    </RelativeLayout>


</LinearLayout>