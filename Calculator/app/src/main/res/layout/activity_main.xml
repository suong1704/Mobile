<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    >

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:textStyle="bold"
        android:textSize="80dp"
        android:gravity="bottom"
        android:textAlignment="viewEnd"
        android:layout_marginBottom="40dp"
        android:enabled="false"
        tools:ignore="RtlCompat,SpeakableTextPresentCheck,SpeakableTextPresentCheck">
    </EditText>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="2"
        >

        <Button
            android:id="@+id/bt_7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:backgroundTint="#E6DBDB"
            android:text="7"
            android:layout_margin="2dp"
            android:textSize="30dp"
            android:textColor="#556ADF"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/bt_8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:backgroundTint="#E6DBDB"
            android:text="8"
            android:textColor="#556ADF"
            android:textSize="30dp"></Button>

        <Button
            android:id="@+id/bt_9"
            android:backgroundTint="#E6DBDB"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:textColor="#556ADF"
            android:text="9"></Button>

        <Button
            android:id="@+id/bt_t"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:textColor="#556ADF"
            android:backgroundTint="#A39999"
            android:text="+-"
            android:textSize="30dp"></Button>

        <Button
            android:id="@+id/bt_xoa"
            android:backgroundTint="#A39999"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:textColor="#556ADF"
            android:text="->"></Button>

        <Button
            android:id="@+id/bt_4"
            android:backgroundTint="#E6DBDB"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:textColor="#556ADF"
            android:text="4"></Button>

        <Button
            android:id="@+id/bt_5"
            android:backgroundTint="#E6DBDB"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:textColor="#556ADF"
            android:text="5"></Button>

        <Button
            android:id="@+id/bt_6"
            android:backgroundTint="#E6DBDB"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:textColor="#556ADF"
            android:text="6"></Button>

        <Button
            android:id="@+id/bt_nhan"
            android:backgroundTint="#A39999"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:textColor="#556ADF"
            android:text="*"></Button>

        <Button
            android:id="@+id/bt_chia"
            android:backgroundTint="#A39999"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:textColor="#556ADF"
            android:text="/"></Button>
    </GridLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="2">
            <Button
                android:id="@+id/bt_1"
                android:backgroundTint="#E6DBDB"
                android:textSize="30dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="2dp"
                android:textColor="#556ADF"
                android:text="1"></Button>
            <Button
                android:id="@+id/bt_2"
                android:backgroundTint="#E6DBDB"
                android:textSize="30dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="2dp"
                android:textColor="#556ADF"
                android:text="2"></Button>
            <Button
                android:id="@+id/bt_3"
                android:backgroundTint="#E6DBDB"
                android:textSize="30dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="2dp"
                android:textColor="#556ADF"
                android:text="3"></Button>
            <Button
                android:id="@+id/bt_tru"
                android:backgroundTint="#A39999"
                android:textSize="30dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="2dp"
                android:textColor="#556ADF"
                android:text="-"></Button>

            <Button
                android:id="@+id/bt_C"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="2dp"
                android:backgroundTint="#E47E7E"
                android:text="C"
                android:textColor="#556ADF"
                android:textSize="30dp"></Button>
            <Button
                android:id="@+id/bt_0"
                android:backgroundTint="#E6DBDB"
                android:textSize="30dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="2dp"
                android:textColor="#556ADF"
                android:text="0"></Button>
            <Button
                android:id="@+id/bt_p"
                android:backgroundTint="#A39999"
                android:textSize="30dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="2dp"
                android:textColor="#556ADF"
                android:text="."></Button>
            <Button
                android:id="@+id/bt_cong"
                android:backgroundTint="#A39999"
                android:textSize="30dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="2dp"
                android:textColor="#556ADF"
                android:text="+"></Button>
        </GridLayout>
        <Button
            android:id="@+id/bt_bang"
            android:backgroundTint="#A39999"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:textColor="#556ADF"
            android:text="="></Button>
    </LinearLayout>
</LinearLayout>